  },
  "devDependencies": {
    "@sentry/node": "^10.32.1",
    "@types/bun": "^1.3.5",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "jest": "^29.7.0",
    "next": "^16.1.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7"
